<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="net.prunusmume.ikastage.presentation.viewmodel.ListItemScheduleViewModel" />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardBackgroundColor="#f5f5f5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/time_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{viewModel.time}"
                android:textSize="24sp"
                tools:text="07:00 ~ 11:00" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/regular_battle_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.regularBattle}"
                    android:textSize="20sp"
                    tools:text="ナワバリバトル" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.github.chuross.AspectRatioImageView
                            android:id="@+id/regular_stage_image1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            app:ariv_heightRatio="9"
                            app:ariv_widthRatio="16"
                            bind:imageUrl="@{viewModel.regularFirstStageImageUrl}" />

                        <TextView
                            android:id="@+id/regular_stage_name_text1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@{viewModel.regularFirstStageName}"
                            tools:text="デカライン高架下" />

                    </LinearLayout>

                    <Space
                        android:layout_width="8dp"
                        android:layout_height="match_parent" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.github.chuross.AspectRatioImageView
                            android:id="@+id/regular_stage_image2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            app:ariv_heightRatio="9"
                            app:ariv_widthRatio="16"
                            bind:imageUrl="@{viewModel.regularSecondStageImageUrl}" />

                        <TextView
                            android:id="@+id/regular_stage_name_text2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@{viewModel.regularSecondStageName}"
                            tools:text="ヒラメが丘団地" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ranked_battle_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.rankedBattle}"
                    android:textSize="20sp"
                    tools:text="ガチマッチ" />

                <TextView
                    android:id="@+id/ranked_battle_mode_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@{viewModel.rankedBattleMode}"
                    android:textSize="16sp"
                    tools:text="ガチエリア" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.github.chuross.AspectRatioImageView
                            android:id="@+id/ranked_stage_image1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            app:ariv_heightRatio="9"
                            app:ariv_widthRatio="16"
                            bind:imageUrl="@{viewModel.rankedFirstStageImageUrl}" />

                        <TextView
                            android:id="@+id/ranked_stage_name_text1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@{viewModel.rankedFirstStageName}"
                            tools:text="キンメダイ美術館" />

                    </LinearLayout>

                    <Space
                        android:layout_width="8dp"
                        android:layout_height="match_parent" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.github.chuross.AspectRatioImageView
                            android:id="@+id/ranked_stage_image2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            app:ariv_heightRatio="9"
                            app:ariv_widthRatio="16"
                            bind:imageUrl="@{viewModel.rankedSecondStageImageUrl}" />

                        <TextView
                            android:id="@+id/ranked_stage_name_text2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@{viewModel.rankedSecondStageName}"
                            tools:text="ショッツル鉱山" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</layout>